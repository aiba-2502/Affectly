################################################################################
# 心のログ フロントエンド環境変数設定ファイル
################################################################################

#===============================================================================
# API設定 / API Settings
#===============================================================================

# バックエンドAPIのURL
NEXT_PUBLIC_API_URL=http://localhost:3000

# 内部APIのURL（Docker環境用）
INTERNAL_API_URL=http://web:3000

#===============================================================================
# AI設定 / AI Settings
#===============================================================================

# AIサービスの選択
# openai, anthropic, google
NEXT_PUBLIC_SELECT_AI_SERVICE=openai

# デフォルトのAIモデル
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
# Google: gemini-1.5-pro, gemini-1.5-flash, gemini-1.0-pro
NEXT_PUBLIC_SELECT_AI_MODEL=gpt-4o-mini

# 会話のランダム性を調整する温度パラメータ（0.0～2.0）
NEXT_PUBLIC_TEMPERATURE=0.7

# 最大トークン数
NEXT_PUBLIC_MAX_TOKENS=1000

# 過去のメッセージ保持数
NEXT_PUBLIC_MAX_PAST_MESSAGES=10

#===============================================================================
# APIキー / API Keys
#===============================================================================
# 
# 注意: セキュリティのため、APIキーはバックエンドの.envファイルで管理します
# NOTE: For security, API keys are managed in backend/.env file
# 
# バックエンドで以下の環境変数を設定してください:
# - OPENAI_API_KEY
# - ANTHROPIC_API_KEY  
# - GOOGLE_API_KEY

#===============================================================================
# Live2D設定 / Live2D Settings
#===============================================================================

# Live2Dモデルのパス
NEXT_PUBLIC_LIVE2D_MODEL_PATH=/live2d/hiyori/hiyori_free.model3.json

# Live2D表示設定
NEXT_PUBLIC_SHOW_LIVE2D=true

#===============================================================================
# アプリケーション設定 / Application Settings
#===============================================================================

# アプリケーション名
NEXT_PUBLIC_APP_NAME=心のログ

# 環境（development, production）
NODE_ENV=development

# デバッグモード
NEXT_PUBLIC_DEBUG_MODE=false

#===============================================================================
# セッション設定 / Session Settings
#===============================================================================

# セッションタイムアウト（分）
NEXT_PUBLIC_SESSION_TIMEOUT=60

# 自動保存間隔（秒）
NEXT_PUBLIC_AUTO_SAVE_INTERVAL=30